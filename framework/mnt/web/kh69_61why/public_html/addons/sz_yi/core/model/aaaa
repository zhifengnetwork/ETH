SELECT id,title,thumb,marketprice,productprice,sales,total,description,unit FROM `hs_sz_yi_goods` where 1  and `uniacid` = :uniacid AND `deleted` = 0 and status=1 AND ( `ccate` = :ccate or  FIND_IN_SET(3,ccates)<>0 ) and ( ifnull(showlevels,'')='' or FIND_IN_SET( 0,showlevels)<>0 )  and ( ifnull(showgroups,'')='' or FIND_IN_SET( 0,showgroups)<>0 )  ORDER BY  displayorder desc,createtime desc  LIMIT 0,20